{
  "name": "sk-boilerplate-ssr",
  "version": "1.0.0",
  "description": "A React + React Router v4 + Redux front end with server side rendering, code splitting and HMR.",
  "scripts": {
    "clean": "rm -rf build/*",
    "build": "NODE_ENV=production yarn run build:client && yarn run build:server",
    "build:client": "webpack -p --config config/webpack.client.config.js --progress",
    "build:server": "webpack --config config/webpack.server.config.js --progress",
    "start": "NODE_ENV=production node build/server",
    "start:dev": "nodemon src/server -w src/server",
    "test": "jest",
    "lint": "eslint .",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls"
  },
  "main": "index.js",
  "repository": "github.com/samisking/sk-boilerplate-ssr",
  "author": "Sam King",
  "license": "MIT",
  "dependencies": {
    "chalk": "^1.1.3",
    "koa": "next",
    "koa-compress": "next",
    "koa-convert": "^1.2.0",
    "koa-helmet": "^3.1.0",
    "koa-static": "^2.1.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-helmet": "^4.0.0",
    "react-redux": "^5.0.2",
    "react-router": "next",
    "react-router-dom": "next",
    "react-transform-hmr": "^1.0.4",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-css-modules-transform": "^1.2.7",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-system-import-transformer": "^3.1.0",
    "babel-preset-env": "^1.2.2",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-1": "^6.22.0",
    "babel-register": "^6.24.0",
    "coveralls": "^2.13.0",
    "css-loader": "^0.28.0",
    "enzyme": "^2.8.0",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "identity-obj-proxy": "^3.0.0",
    "ignore-loader": "^0.1.2",
    "jest": "^19.0.2",
    "koa-webpack-dev-middleware": "^1.4.5",
    "koa-webpack-hot-middleware": "^1.0.3",
    "nodemon": "^1.11.0",
    "postcss-for": "^2.1.1",
    "postcss-loader": "^1.3.3",
    "postcss-modules-values": "^1.2.2",
    "postcss-nested": "^1.0.0",
    "react-addons-test-utils": "^15.4.2",
    "react-hot-loader": "next",
    "react-test-renderer": "^15.4.2",
    "redux-mock-store": "^1.2.2",
    "style-loader": "^0.16.1",
    "url-loader": "^0.5.8",
    "webpack": "^2.3.2",
    "webpack-node-externals": "^1.5.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**"
    ],
    "moduleNameMapper": {
      "^.+\\.(css)$": "identity-obj-proxy"
    }
  }
}
